{
  "expo": {
    "name": "Match & Bloom: Garden Guardians",
    "slug": "match-and-bloom",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#FDFBF7",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FDFBF7"
    },
    "ios": {
      "bundleIdentifier": "com.yourname.matchandbloom",
      "supportsTablet": true,
      "backgroundColor": "#FDFBF7"
    },
    "android": {
      "package": "com.yourname.matchandbloom",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FDFBF7"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "backgroundColor": "#FDFBF7"
    },
    "plugins": [
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#FDFBF7",
          "image": "./assets/splash-icon.png",
          "imageWidth": 200
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b81c3c4d-1044-4524-8951-1234567890ab"
      }
    }
  }
}
